<div class="products-heading">
    <h3>Available Products</h3>
</div>

<div class="container-products">

    <div class="table-home">
        <table>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
            </tr>
            {{#each products}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.stock}}</td>
                </tr>
            {{/each}}
        </table>
    </div>
</div>